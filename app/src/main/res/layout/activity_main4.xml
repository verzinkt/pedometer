<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity4">


    <TextView
        android:id="@+id/textViewLabel"
        android:layout_width="135dp"
        android:layout_height="39dp"
        android:text="Настройки"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="323dp"
        android:layout_height="38dp"
        android:layout_marginTop="40dp"
        android:text="Введите цель вашей активности:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.329"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewLabel"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/etLName"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.307"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="MissingConstraints"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="224dp"
        android:layout_height="46dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dp"
        android:backgroundTint="#1170d9"
        android:text="Отправить"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etLName"
        tools:ignore="MissingConstraints,OnClick" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="323dp"
        android:layout_height="38dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="60dp"
        android:text="Общие настройки приложения:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSubmit"
        tools:ignore="MissingConstraints"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/newest"
        android:layout_width="224dp"
        android:layout_height="46dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:backgroundTint="#1170d9"
        android:onClick="allSettings"
        android:text="Перейти"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:ignore="MissingConstraints,OnClick" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="323dp"
        android:layout_height="38dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="52dp"
        android:text="Версия: 1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newest"
        tools:ignore="MissingConstraints"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="329dp"
        android:layout_height="73dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="32dp"
        android:text="Об авторе: \n\nСамохин Дмитрий 181-723"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:ignore="MissingConstraints"
        android:textColor="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>